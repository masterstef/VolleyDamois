@model VolleyDamois.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <h2>Nom de l'équipe : @Model.TeamName</h2>
        <a asp-action="Delete" asp-route-id="@Model.Id">
            <button class="btn-danger btn-block">
                <svg class="bi bi-x-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z" />
                    <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z" />
                </svg>
            </button>
        </a>
        <hr />
        <h2>Catégorie : @Model.Category.Category</h2>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th class="col-sm-10">
                        Id Joueur
                    </th>
                    <th class="col-sm-10">
                        Nom
                    </th>
                    <th class="col-sm-10">
                        Prénom
                    </th>
                    <th class="col-sm-10">
                        Sexe
                    </th>
                    <th class="col-sm-10">
                        Adresse
                    </th>
                    <th class="col-sm-10">
                        Num membre
                    </th>
                    <th class="col-sm-10">
                        Email
                    </th>
                    <th class="col-sm-10">
                        Téléphone
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Player p in Model.Players)
                {
                    <tr>
                        <td class="col-sm-10">
                            @p.Id
                        </td>
                        <td class="col-sm-10">
                            @p.Name
                        </td>
                        <td class="col-sm-10">
                            @p.LastName
                        </td>
                        <td class="col-sm-10">
                            @p.Sex.Sexe
                        </td>
                        <td class="col-sm-10">
                            @p.Adress
                        </td>
                        <td class="col-sm-10">
                            @p.NumMember
                        </td>
                        <td class="col-sm-10">
                            @p.Email
                        </td>
                        <td class="col-sm-10">
                            @p.TelNumber
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
